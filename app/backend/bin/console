#!/usr/bin/env php
<?php

use App\Service\Command\DeployCommand;
use App\Service\Command\DeploymentFailedEmailCommand;
use App\Service\Command\SendSocketUpdatesCommand;
use App\Service\DeploymentService;
use Symfony\Component\Console\Application;

require_once dirname(__DIR__) . '/vendor/autoload.php';

try {
    $application = new Application;

    $deploymentService = new DeploymentService();

    $application->add(new DeployCommand($deploymentService, dirname(__DIR__)));
    $application->add(new SendSocketUpdatesCommand($deploymentService, dirname(__DIR__)));
    $application->add(new DeploymentFailedEmailCommand($deploymentService));

    $application->run();
} catch (Exception $e) {
    die($e->getMessage());
}
